{{#burger-menu as |burger|}}
  {{#burger.menu itemTagName="li" as |menu|}}
    <button {{action burger.state.actions.close}}>Close</button>

    <ul>
      {{#menu.item}}
        {{link-to 'Exercise 1' 'a11y-1'}}
      {{/menu.item}}
      {{#menu.item}}
        {{link-to 'Exercise 2' 'a11y-2'}}
      {{/menu.item}}
      {{#menu.item}}
        {{link-to 'Exercise 3' 'a11y-3'}}
      {{/menu.item}}
